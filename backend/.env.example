# ============================================
# 中国A股量化交易系统 - 后端环境变量配置
# ============================================

# -------------------- 数据库配置 --------------------
# 数据库连接字符串
# 开发环境使用SQLite（默认）
DATABASE_URL=sqlite:///./quant_trading.db

# 生产环境推荐使用PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/quant_trading
# 
# 格式说明：
# - SQLite: sqlite:///./database.db
# - PostgreSQL: postgresql://username:password@host:port/database
# - MySQL: mysql://username:password@host:port/database

# -------------------- API服务配置 --------------------
# API服务监听地址（0.0.0.0表示监听所有网络接口）
API_HOST=0.0.0.0

# API服务端口
API_PORT=8000

# 开发模式下启用自动重载（生产环境应设为False）
API_RELOAD=True

# 应用环境（development/production）
ENVIRONMENT=development

# -------------------- CORS跨域配置 --------------------
# 允许的跨域来源（多个来源用逗号分隔）
# 开发环境示例
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 生产环境示例
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# -------------------- Redis缓存配置 --------------------
# Redis连接URL（留空则使用内存缓存）
REDIS_URL=

# 使用Redis示例
# REDIS_URL=redis://localhost:6379/0
# 使用Redis with密码
# REDIS_URL=redis://:password@localhost:6379/0

# 是否启用缓存
CACHE_ENABLED=True

# 缓存过期时间（秒）
CACHE_TTL_STOCK_LIST=600        # 股票列表缓存10分钟
CACHE_TTL_KLINE_DATA=300        # K线数据缓存5分钟
CACHE_TTL_INDICATORS=300        # 技术指标缓存5分钟
CACHE_TTL_STOCK_INFO=3600       # 股票信息缓存1小时

# -------------------- 日志配置 --------------------
# 日志级别（DEBUG/INFO/WARNING/ERROR/CRITICAL）
LOG_LEVEL=INFO

# 日志文件路径（留空则只输出到控制台）
LOG_FILE=

# 生产环境日志配置示例
# LOG_LEVEL=WARNING
# LOG_FILE=/var/log/quant-trading/app.log

# -------------------- 安全配置 --------------------
# API请求限流（每分钟最大请求数）
RATE_LIMIT_PER_MINUTE=60

# JWT密钥（如果启用认证功能）
# SECRET_KEY=your-secret-key-here-change-in-production

# -------------------- 数据源配置 --------------------
# AkShare数据源配置（通常不需要配置）
# 如果使用Tushare，需要配置token
# TUSHARE_TOKEN=your-tushare-token-here

# 数据获取重试次数
DATA_FETCH_RETRY_TIMES=3

# 数据获取超时时间（秒）
DATA_FETCH_TIMEOUT=30

# -------------------- 性能优化配置 --------------------
# 数据库连接池大小
DB_POOL_SIZE=5

# 数据库连接池最大溢出
DB_MAX_OVERFLOW=10

# 是否启用SQL查询日志（开发环境可启用，生产环境建议关闭）
DB_ECHO=False

# -------------------- 其他配置 --------------------
# 时区设置
TIMEZONE=Asia/Shanghai

# 是否启用调试模式（生产环境必须设为False）
DEBUG=True

