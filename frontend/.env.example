# ============================================
# 中国A股量化交易系统 - 前端环境变量配置
# ============================================

# -------------------- API配置 --------------------
# 后端API基础URL
# 开发环境
VITE_API_BASE_URL=http://localhost:8000/api

# 生产环境示例
# VITE_API_BASE_URL=https://api.yourdomain.com/api

# -------------------- 应用配置 --------------------
# 应用标题
VITE_APP_TITLE=中国A股量化交易系统

# 应用版本
VITE_APP_VERSION=1.0.0

# -------------------- 功能开关 --------------------
# 是否启用调试模式
VITE_DEBUG=true

# 是否启用Mock数据（用于开发测试）
VITE_ENABLE_MOCK=false

# -------------------- 图表配置 --------------------
# ECharts主题（light/dark）
VITE_CHART_THEME=light

# 默认显示的K线数量
VITE_DEFAULT_KLINE_COUNT=100

# -------------------- 缓存配置 --------------------
# 前端缓存过期时间（毫秒）
VITE_CACHE_EXPIRE_TIME=300000

# -------------------- 其他配置 --------------------
# 请求超时时间（毫秒）
VITE_REQUEST_TIMEOUT=30000

# 是否启用请求日志
VITE_ENABLE_REQUEST_LOG=true

